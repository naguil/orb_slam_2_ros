<?xml version="1.0"?>

<launch>

  <node name="orb_slam2_mono" pkg="orb_slam2_ros"
      type="orb_slam2_ros_mono" output="screen">

       <remap from="/camera/image_raw" to="/tello/image_raw" />
       <!-- <remap from="/camera/image_raw" to="/usb_cam/image_raw" /> -->

       <!-- Downward angle around y_b, with respect to the horizontal plane: -->
       <param name="cam_angle_deg" type="double" value="13.0" />
       <!-- Pose and pointcloud scale: -->
       <param name="pose_scale" type="double" value="5.0" />

       <param name="publish_pointcloud" type="bool" value="true" />
       <param name="publish_pose" type="bool" value="true" />
       <param name="localize_only" type="bool" value="true" />
       <param name="reset_map" type="bool" value="false" />

       <!-- static parameters -->
       <param name="load_map" type="bool" value="true" />
       <param name="map_file" type="string" value="/home/nagui/orb_ws/src/orb_slam_2_ros/ros/mapa_dpto_2.bin" />
       <param name="voc_file" type="string" value="$(find orb_slam2_ros)/orb_slam2/Vocabulary/ORBvoc.txt" />

       <!-- <param name="pointcloud_frame_id" type="string" value="map_tilted" /> -->
       <param name="pointcloud_frame_id" type="string" value="map" />
       <param name="camera_frame_id" type="string" value="camera_link" />
       <param name="target_frame_id" type="string" value="base_link" />
       <param name="min_num_kf_in_map" type="int" value="5" />

       <!-- ORB parameters -->
       <param name="/ORBextractor/nFeatures" type="int" value="1800" />
       <param name="/ORBextractor/scaleFactor" type="double" value="1.2" />
       <param name="/ORBextractor/nLevels" type="int" value="8" />
       <param name="/ORBextractor/iniThFAST" type="int" value="20" />
       <param name="/ORBextractor/minThFAST" type="int" value="7" />

       <!-- Camera parameters -->
       <!-- Camera frames per second -->
       <param name="camera_fps" type="int" value="5" />
       <!-- Color order of the images (0: BGR, 1: RGB. It is ignored if images are grayscale) -->
       <param name="camera_rgb_encoding" type="bool" value="true" />

        <!-- Camera calibration parameters -->
        <!--If the node should wait for a camera_info topic to take the camera calibration data-->
       <param name="load_calibration_from_cam" type="bool" value="false" />
       <!-- Camera calibration and distortion parameters (OpenCV) -->
      <param name="camera_fx" type="double" value="929.562627" />
      <param name="camera_fy" type="double" value="928.604856" />
      <param name="camera_cx" type="double" value="487.474037" />
      <param name="camera_cy" type="double" value="363.165223" />
       <!-- Camera calibration and distortion parameters (OpenCV) -->
      <param name="camera_k1" type="double" value="-0.016272" />
      <param name="camera_k2" type="double" value="0.093492" />
      <param name="camera_p1" type="double" value="0.000093" />
      <param name="camera_p2" type="double" value="0.002999" />
      <param name="camera_k3" type="double" value="0.0" />
  </node>

  <!-- <node pkg="image_transport" name="image_compressed" type="republish" args="raw in:=/tello/image_raw/h264 compressed out:=/tello/image_raw" /> -->


<!--  <node pkg="image_transport" name="image_decompressed" type="republish" args="compressed in:=/tello/image_raw raw out:=/tello/image_raw">
  <param name="image_transport" value="h264"/>
  </node> -->


  <!-- CAMBIAR EL VALOR DE CABECEO POR EL ANGULO DE INCLINACION DE LA CAMARA. ORIGINAL: 6.02138591938 [rad] = 345 [grad] = -15 [grad]  -->
  <!-- la siguiente transformacion es utilizada para enderezar el mapa en rviz (nota: no arregla la pose) -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="maptilted_to_map_broadcaster" args="0.0 0 0 0 0.261799387799 0 map_tilted map 33" /> -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="maptilted_to_map_broadcaster" args="0.0 0 0 0 0 0 map_tilted map 33" /> -->

  <!-- la siguiente transformacion genera el offset entre la camara y el centro del vehiculo (base) -->
  <node pkg="tf" type="static_transform_publisher" name="base_to_cam_broadcaster" args="0.035 0 0 0 0 0 base_link camera_link 33" />
  <!-- <node pkg="tf" type="static_transform_publisher" name="cam_to_aux_broadcaster" args="0 0 0 0 0.261799387799 0 camera_link aux_link 33" /> -->


  <!-- <node pkg="tf" type="static_transform_publisher" name="base_to_cam_broadcaster" args="0 0 0 0 0 0 target_link camera_link 33" /> -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="base_to_cam_broadcaster" args="0 0 0 0 6.0213859193 0 base_link camera_link 33" /> -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="cam_to_target_broadcaster" args="0.0 0 0 0 6.0213859193 0 camera_link target_link 33" /> -->

</launch>
